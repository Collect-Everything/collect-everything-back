{
  "name": "showcase-gateway",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "tsx watch ./src/index.ts",
    "start": "node -r esbuild-register ./dist/index.js",
    "build": "tsup src/index.ts --minify --format cjs --out-dir dist",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "test": "vitest",
    "clean:logs": "rm -rf logs"
  },
  "dependencies": {
    "@ce/db": "*",
    "@ce/logger": "*",
    "@ce/server-core": "*",
    "@ce/shared-core": "*",
    "@ce/events": "*",
    "body-parser": "^1.20.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@ce/eslint-config": "*",
    "@ce/typescript-config": "*",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}

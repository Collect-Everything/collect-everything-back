{
  "name": "showcase-gateway",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "tsx --watch ./src/index.ts",
    "start": "node -r esbuild-register ./dist/index.js",
    "build": "tsup src/server.ts --minify --format cjs --out-dir dist",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts*\" --max-warnings 0",
    "test": "jest --detectOpenHandles",
    "clean:logs": "rm -rf logs"
  },
  "jest": {
    "preset": "@ce/jest-presets/jest/node"
  },
  "dependencies": {
    "@ce/db": "*",
    "@ce/logger": "*",
    "@ce/sequelize": "*",
    "@ce/server-core": "*",
    "@ce/shared-core": "*",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "mysql2": "^3.9.1",
    "sequelize": "^6.37.0"
  },
  "devDependencies": {
    "@ce/eslint-config": "*",
    "@ce/jest-presets": "*",
    "@ce/typescript-config": "*",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
